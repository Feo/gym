<%= render 'shared/main2' %>

<div class="wrapper_small">
    <div class="op_page">
        <div class="return">
        </div>
        <div class="content_form g_border">
            <div class="hd g_box">
                <div class="op_list g_tp_10">
                    <%= link_to "给所有教练发送通知", message_index_administrator_path(current_admin)%>
                    <%= link_to "给特定教练发送通知", find_special_coach_administrators_path %>
                    <%= link_to "给所有会员发送通知", notice_all_member_administrators_path %>
                    <%= link_to "给特定会员发送通知", find_special_member_administrators_path, :class => "current" %>
                    <%= link_to "通知列表", notices_administrators_path %>
                </div>
            </div>

            <div class="bd no_tp">
              <div class="form">
                  <%= form_for @member, :url => {:action => 'notice_special_member'}  do |f| %>
                    <div class="g_input">
                      <%= f.label :province, "省", :class =>  "gi_label" %>
                      <%= f.text_field :province, :class => "gi_input", :type => "text", :placeholder => "" %>
                    </div>
                    <div class="g_input">
                      <%= f.label :city, "市", :class =>  "gi_label" %>
                      <%= f.text_field :city, :class => "gi_input", :type => "text", :placeholder => "" %>
                    </div>
                    
                    <div class="g_box", style= "margin-top:15px;">
                        <%= f.label :gender, "性别", :class => "gi_label" %>
                        <%= f.select :gender, ["","男", "女"], :class => "gi_input" %>
                    </div>

                    <div class="item align_right">
                        <%= f.submit "查找", :class => "g_btn_blue" %>
                    </div>
                  <% end %>
                </div>

            </div>
            



        </div>
    </div>
</div>
