<%= render 'shared/main2' %>

<div class="wrapper_small">
    <div class="op_page">
        <div class="return">
        </div>
        <div class="content_form g_border">
            <div class="hd g_box">
                <div class="op_list g_tp_10">
                    <%= link_to "给所有教练发送通知", message_index_administrator_path(current_admin)%>
                    <%= link_to "给特定教练发送通知", notice_special_view_administrators_path, :class => "current" %>
                    <%= link_to "通知列表", notices_administrators_path %>
                </div>
            </div>

            <div class="bd no_tp">
              <%= form_for @notice, :url => {:action => 'message_create_special'}  do |f| %>
                <div class="g_input">
                  <%= f.label :title, "标题", :class =>  "gi_label" %>
                  <%= f.text_field :title, :class => "gi_input", :type => "text", :placeholder => "" %>
                </div>
                <div class="g_input">
                  <%= f.label :content, "内容", :class =>  "gi_label" %>
                  <%= f.text_area :content, :class => "gi_input", :type => "text", :placeholder => "", :style => "height:180px;" %>
                </div>
                <br/>
                <div class="g_box", style= "margin-top:150px;">
                    <%= f.label :category, "通知类型 | ", :class => "gi_label" %>
                    <%= f.select :category, ["系统通知", "职业通知"], :class => "gi_input" %>
                </div>

                <div id="tokenContainer">
                    <div class="block">
                        <p class="title">通知</p>
                        <% @coaches.each do |coach| %>
                          <li><strong><%= check_box_tag "phones[]", coach.phone %>  教练姓名：<%= coach.name %> | 手机号：<%= coach.phone %></strong></li>
                        <% end %>
                    </div>
                </div>

                <div class="item align_right">
                    <%= f.submit "　创建　", :class => "g_btn_blue" %>
                </div>
              <% end %>

            </div>
            



        </div>
    </div>
</div>
