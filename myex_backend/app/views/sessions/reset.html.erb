<div class="login_page g_border">
    <div class="head g_box">
        <div class="logo"><%= image_tag "logo.png" %></div>
        <div class="title">
            <h1>51练</h1>
            <h2>管理员客户端</h2>
        </div>
    </div>
    <div class="form">
      <%= form_for @admin, :url => {:action => 'reset_password'}  do |f| %>
        <div class="g_input">
          <%= f.label :phone, "手机号", :class =>  "gi_label" %>
          <%= f.text_field :phone, :class => "gi_input", :type => "text", :placeholder => "" %>
        </div>
        <div class="g_input">
          <%= f.label :password, "新密码", :class =>  "gi_label" %>
          <%= f.password_field :password, :class => "gi_input", :type => "password", :placeholder => "" %>
        </div>
        <div class="g_input">
          <%= f.label :password_confirmation, "密码确认", :class =>  "gi_label" %>
          <%= f.password_field :password_confirmation, :class => "gi_input", :type => "password", :placeholder => "" %>
        </div>
        <div class="g_input">
          <%= f.label :token, "验证码", :class =>  "gi_label" %>
          <%= f.text_field :token, :class => "gi_input", :type => "text", :placeholder => "" %>
        </div>

        <div class="item align_right">
            <%= f.submit "重置密码", :class => "g_btn_blue" %>
        </div>
      <% end %>
    </div>
</div>